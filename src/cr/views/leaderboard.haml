%html{:lang => 'en'}
  %head
    %title= @leaderboard.name
  %body
    %h1= @leaderboard.name
    %h4= "Last updated: #{@leaderboard.last_updated}"
    - @leaderboard.board.each do |e, i|
      %p= "<img style=\"width:50px;height:50px;\" src=#{e.user.avatar_url}> #{e.rank}. <a href=\"/leaderboards/#{@leaderboard.leaderboard_id}/#{e.user.steam_id}\">#{e.user.name}</a> (#{e.time_str})"
