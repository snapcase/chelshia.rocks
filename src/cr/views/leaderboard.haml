%h1= @leaderboard.name
%h4= "Last updated: #{@leaderboard.last_updated}"
%table
  %tr
    %th #
    %th Name
    %th Score
  - @leaderboard.board.each_with_index do |e, i|
    %tr
      %td= i + 1
      %td
        %img{style: 'width:50px;height:50px', src: e.user.avatar_url}
        %a{href: "/leaderboards/#{@leaderboard.leaderboard_id}/#{e.user.steam_id}"}= e.user.name
      %td= "#{e.time_str}"
